# .env example file - Copy this to .env and fill in your actual values

PORT=5000
NODE_ENV=development

# Preferred Atlas connection (set this in teammates' environments)
# Format: mongodb+srv://<user>:<password>@cluster0.example.mongodb.net/bhromonbondhu?retryWrites=true&w=majority
MONGODB_ATLAS_URI=

# Legacy/alternate key (optional)
MONGODB_URI=

# Local MongoDB override (defaults to mongodb://127.0.0.1:27017/bhromonbondhu)
MONGODB_LOCAL_URI=mongodb://127.0.0.1:27017/bhromonbondhu

# Force using local DB even if Atlas URI is present
# Set to 'true' to always use local MongoDB
FORCE_LOCAL=false

# JWT Secret - Use a strong random string in production
JWT_SECRET=your_very_long_random_secret_key_here_change_in_production

# Frontend URL
FRONTEND_URL=http://localhost:3000
